<Label>
    font_size: 32

<MyLayout>
    BoxLayout:
        orientation: "vertical"
        # horizontal vertical
        size: root.width, root.height
        spacing: 10
        padding: 10


        Label:
            text: "something"
            background_color: (255/255, 60/255, 60/255)
            canvas.before:
                Color: 
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            # Text 
            color: (255/255, 60/255, 60/255)
            bold: True
            italic: True
            outline_color: (0.1, 0.1, 0.1)
            outline_width: 5

        Label:
            text: "something"

        Label:
            text: "something"

        TextInput:  
            multiline: False




